FROM node:20-alpine AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

FROM nginx:alpine

# SUPPRIME la config par défaut d'Apache/nginx
RUN rm -rf /usr/share/nginx/html/*

# Vite génère /dist
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 8080
CMD ["nginx", "-g", "daemon off;"]
